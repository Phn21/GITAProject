<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:gravity="center"
    android:background="@drawable/es"
    tools:context=".DetailInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/nameDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Full Name:" />

        <TextView
            android:id="@+id/nameDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/numberDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Phone Number:" />

        <TextView
            android:id="@+id/numberDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/locationDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Location:" />

        <TextView
            android:id="@+id/locationDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/donationDayDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Donation Day:" />

        <TextView
            android:id="@+id/donationDayDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/redonationTypeDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="ReDonation Day:" />

        <TextView
            android:id="@+id/redonationDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"

            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/bloodTypeDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Blood Type:" />

        <TextView
            android:id="@+id/bloodTypeDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/healthDe"
            android:textSize="25sp"
            android:textColor="#A12117"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Health Issues:" />

        <TextView
            android:id="@+id/healthDEInput"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>

    <Button
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_margin="40dp"
        android:textColor="#78CA7B"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:drawableRight="@drawable/call"
        android:background="@drawable/styles"
        android:backgroundTint="#1BD6D6D6"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Call To take a blood" />

</LinearLayout>